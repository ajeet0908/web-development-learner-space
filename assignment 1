<!--Interactive Element-->

    <section id="interactive">
        <h2>Interactive Chess Quiz</h2>
        <p>Test your chess knowledge with our quiz:</p>
        <div id="quiz">
            <p>Question: Which piece can move in an "L" shape?</p>
            <button onclick="checkAnswer('knight')">Knight</button>
            <button onclick="checkAnswer('bishop')">Bishop</button>
            <button onclick="checkAnswer('rook')">Rook</button>
            <p id="result"></p>
        </div>
    </section>

<!--JavaScript-->

<script>
function checkAnswer(answer) {
    const result = document.getElementById('result');
    if (answer === 'knight') {
        result.textContent = 'Correct!';
        result.style.color = 'green';
    } else {
        result.textContent = 'Wrong! Try again.';
        result.style.color = 'red';
    }
}
</script>

